@model IEnumerable<Game>
@{
    ViewData["Title"] = "Index";
}
@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mt-2 btn-lg" asp-action="CreateGame">
        <i class="bi bi-patch-plus-fill"></i>
        Add Item
    </a>
}
<div class="mt-5">
    <table class="table table-bordered border-primary ">
        <tbody>
            @foreach (var i in Model)
            {
                <tr class="border-1 border-success">
                    <td class="d-flex">
                        <div class="pe-2 d-flex justify-content-center">
                            <img src="@($"{filesettings.ImagePath}/{i.Cover}")" alt="@i.Name" style="max-width:80px;" />
                        </div>
                        <div class="d-flex flex-column justify-content-center">
                            <h4 style="color:black ;font-size:25px"> <small>name:</small>  @i.Name</h4>
                            <h5>  cate:  @i.Categories.Name</h5>
                        </div>
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="align-middle">
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@i.Id">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a class="btn btn-danger rounded rounded-3 " asp-action="Delete" asp-route-id="@i.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    }
                </tr>

            }
        </tbody>
     
    </table>
</div>



